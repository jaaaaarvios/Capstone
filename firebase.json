{
    "hosting": {
        "public": "dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [{
                "source": "/dist/**",
                "destination": "/public.html"
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}